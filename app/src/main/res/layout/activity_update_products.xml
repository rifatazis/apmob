<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdateProducts">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="90dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text"
            android:layout_gravity="center"
            app:cardCornerRadius="30dp"
            android:elevation="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="13dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:paddingTop="10dp"
                android:text="Update Product"
                android:textColor="#044171"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Produk"
                android:padding="12dp"
                android:background="@drawable/rectangle_135"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/product_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Detail Produk"
                android:inputType="textMultiLine"
                android:padding="12dp"
                android:background="@drawable/edit_text"
                android:backgroundTint="#FFCDCD"
                android:layout_marginBottom="12dp"
                android:gravity="top"
                android:minLines="4"
                android:scrollbars="vertical"
                android:overScrollMode="always" />

            <EditText
                android:id="@+id/product_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Harga Produk"
                android:inputType="number"
                android:padding="12dp"
                android:background="@drawable/rectangle_135"
                android:layout_marginBottom="12dp"/>

            <ImageView
                android:id="@+id/productImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_foreground"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/choose_image_button"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:text="Choose Image"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/border"
                    android:textColor="#EC0810" />

                <TextView
                    android:id="@+id/update_button"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:text="Update Product"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/border2"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
        </LinearLayout>
</ScrollView>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_gravity="bottom"
        android:background="@color/black"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/btn1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="17dp"
            android:background="@color/black"
            android:src="@drawable/home"
            android:contentDescription="Home" />

        <ImageView
            android:id="@+id/btn2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginEnd="17dp"
            android:background="@color/black"
            android:src="@drawable/outline_format_list_bulleted_24"
            android:contentDescription="List" />

        <ImageView
            android:id="@+id/btn3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginEnd="17dp"
            android:background="@color/black"
            android:src="@drawable/outline_shopping_cart_24"
            android:contentDescription="Cart" />

        <ImageView
            android:id="@+id/btn4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginEnd="17dp"
            android:background="@color/black"
            android:src="@drawable/wishlist"
            android:contentDescription="Wishlist" />

        <ImageView
            android:id="@+id/btn5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginEnd="13dp"
            android:background="@color/black"
            android:src="@drawable/outline_person_24"
            android:contentDescription="Profile" />
    </LinearLayout>
</FrameLayout>
