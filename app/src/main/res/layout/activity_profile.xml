<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background2"
    tools:context=".UpdateProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="9dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text"
            android:layout_gravity="center"
            app:cardCornerRadius="30dp"
            android:elevation="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="13dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:text="Edit Profil"
                    android:textColor="#044171"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Username :"
                    android:textSize="17sp"
                    android:paddingStart="6dp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="3dp"
                    android:textStyle="bold"
                    />

                <EditText
                    android:id="@+id/edittext_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="New Username"
                    android:padding="12dp"
                    android:background="@drawable/rectangle_135"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name :"
                    android:textSize="17sp"
                    android:paddingStart="6dp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="3dp"
                    android:textStyle="bold"
                    />

                <EditText
                    android:id="@+id/edittext_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="New Name"
                    android:padding="12dp"
                    android:background="@drawable/rectangle_135"
                    android:layout_marginBottom="12dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bio :"
                    android:textSize="17sp"
                    android:paddingStart="6dp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="3dp"
                    android:textStyle="bold"
                    />
                <EditText
                    android:id="@+id/edittext_bio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="New Bio"
                    android:inputType="textMultiLine"
                    android:padding="12dp"
                    android:background="@drawable/edit_text"
                    android:backgroundTint="#FFCDCD"
                    android:layout_marginBottom="12dp"
                    android:gravity="top"
                    android:minLines="4"
                    android:scrollbars="vertical"
                    android:overScrollMode="always" />


                    <TextView
                        android:id="@+id/button_update"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:text="Update"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@drawable/border"
                        android:textColor="#EC0810" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_gravity="bottom"
        android:background="@color/black"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/btn1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="27dp"
            android:paddingTop="3dp"
            android:background="@color/black"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/btn2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginEnd="27dp"
            android:background="@color/black"
            android:src="@drawable/outline_format_list_bulleted_24" />

        <ImageView
            android:id="@+id/btn4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginEnd="27dp"
            android:background="@color/black"
            android:src="@drawable/wishlist" />

        <ImageView
            android:id="@+id/btn5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginEnd="16dp"
            android:background="@color/black"
            android:src="@drawable/outline_person_24" />
    </LinearLayout>
</FrameLayout>
